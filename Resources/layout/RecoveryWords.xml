<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="20dp"
      android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/textRecoveryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recovery Words"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="8dp" />

    <!-- Warning -->
    <TextView
        android:id="@+id/textRecoveryWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write these words down and keep them safe. This is the ONLY way to reset your password if you forget it."
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Card container -->
    <LinearLayout
        android:id="@+id/cardWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_marginBottom="14dp"
        android:background="@android:drawable/dialog_holo_light_frame">

      <!-- Row 1: 1-2 -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/textWord2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />
      </LinearLayout>

      <!-- Row 2: 3-4 -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/textWord4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />
      </LinearLayout>

      <!-- Row 3: 5-6 -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/textWord6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />
      </LinearLayout>

      <!-- Row 4: 7-8 -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/textWord8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />
      </LinearLayout>

      <!-- Row 5: 9-10 -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textWord9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/textWord10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10. ----"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="6dp" />
      </LinearLayout>

    </LinearLayout>

    <!-- Confirmation checkbox -->
    <CheckBox
        android:id="@+id/checkSavedWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I wrote these words down and understand they are required to recover my account."
        android:layout_marginBottom="14dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:id="@+id/buttonCancelRecovery"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Cancel" />

      <Button
          android:id="@+id/buttonContinueRecovery"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="10dp"
          android:text="Continue"
          android:enabled="false" />
    </LinearLayout>

  </LinearLayout>
</ScrollView>
